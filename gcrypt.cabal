        list-grouping ^>=0.1.1,
        list-extras ^>= 0.4.1.6,
        utility-ht ^>=0.0.17.2,
        split ^>=0.2.5,
        bytestring ^>=0.12.2.0

    -- Directories containing source files.
    hs-source-dirs:   lib

    -- Base language which the package is written in.
    default-language: Haskell2010

