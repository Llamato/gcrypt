        containers ^>=0.7,
        text ^>=2.1.3,
        matrix ^>=0.3.6.4,
        directory ^>=1.3.8.5,
        bytestring ^>=0.12.2.0,
        gcrypt

    -- Directories containing source files.
    hs-source-dirs: app

    -- Base language which the package is written in.
    default-language: Haskell2010

